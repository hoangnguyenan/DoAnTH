@model HTFood.Models.ViTriGiaoHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<title>Sửa thông tin vị trí giao hàng</title>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Chỉnh sửa vị trí giao hàng</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","ViTriGiaoHang")">Vị trí giao hàng</a></li>

                    </ul>

                </div>
            </div>
            <!--/Header-->
            <!--content-->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row clearfix">
                    <div class="col-lg-12">
                        <div class="card">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaVT)
                            <div class="header">
                                <ul class="header-dropdown m-r--5">
                                    <li class="dropdown">
                                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                        <ul class="dropdown-menu pull-right">
                                            <li><a href="javascript:void(0);">Action</a></li>
                                            <li><a href="javascript:void(0);">Another action</a></li>
                                            <li><a href="javascript:void(0);">Something else</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <div class="body">
                                <h2 class="card-inside-title">Nhập thông tin cần thay đổi</h2>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.TenVT, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên vị trí" } })
                                                @Html.ValidationMessageFor(model => model.TenVT, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Tên vị trí</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.Khu, new { htmlAttributes = new { @class = "form-control", placeholder = "Khu" } })
                                                @Html.ValidationMessageFor(model => model.Khu, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Khu</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @*@DateTime.Parse(Html.DisplayFor(model => model.NgaySinhKH,new { htmlAttributes = new { @class = "form-control", placeholder = "Ngày sinh" } }).ToString()).ToShortDateString()*@
                                                @Html.EditorFor(model => model.Tang, new { htmlAttributes = new { @class = "form-control", placeholder = "Tầng" } })
                                                @Html.ValidationMessageFor(model => model.Tang, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Tầng</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input class="btn btn-raised btn-primary waves-effect" type="submit" value="Save" />
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <button class="btn btn-raised btn-success btn-sm" data-confirm="@Model.MaVT" id="btnDelete" value="Delete">Xóa</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--/content-->
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#btnDelete').click(function () {
                var choise = confirm("Bạn có muốn xóa ?");
                if (choise) {
                    var idDelete = $(this).attr('data-confirm');
                    window.location.href = '/ViTriGiaoHang/Delete/' + idDelete;
                }
            });
        });
    </script>
</section>

