@model HTFood.Models.Cuahang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/assets/css/create.css" rel="stylesheet" />
<link href="~/assets/css/edit.css" rel="stylesheet" />
<title>Chỉnh sửa cửa hàng</title>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Chỉnh sửa cửa hàng</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","CuaHang")">Cửa hàng</a></li>
                        <li class="breadcrumb-item active">Chỉnh sửa cửa hàng</li>
                    </ul>

                </div>
            </div>
            <!--/Header-->
            <!--content-->

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row clearfix">
                    <div class="col-md-6  ">
                        <div class="card">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaCH)
                            <div class="userbox">
                                <div class="header">
                                    <h2>Chỉnh sửa </h2>
                                    <ul class="header-dropdown m-r--5">
                                        <li class="dropdown">
                                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                            <ul class="dropdown-menu pull-right">
                                                <li><a href="javascript:void(0);">Action</a></li>
                                                <li><a href="javascript:void(0);">Another action</a></li>
                                                <li><a href="javascript:void(0);">Something else</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                                <div class="body">
                                    <h2 class="card-inside-title">Nhập thông tin cửa hàng cần chỉnh sửa</h2>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Tên cửa hàng</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.TenCH, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TenCH, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Địa chỉ</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.DiachiCH, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DiachiCH, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Điện thoại</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.DienthoaiCH, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.DienthoaiCH, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Mô tả</label><br>
                                        <div id="input-text">
                                            <textarea name="MotaCH" type="text" class="text">@Model.MotaCH</textarea>
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Đánh giá</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.DanhgiaCH, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.DanhgiaCH, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Mã khuyến mãi</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.MaKM, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.MaKM, "", new { @class = "text-danger" })
                                        </div>
                                    </div>                                     
                                    <div class="clearfix large_form">
                                        <div class="col-sm-12 ">
                                            <div class="demo-google-material-icon">
                                                <input class="btn btn-raised bg-light-blue waves-effect" type="submit" value="Lưu" />
                                                <a style="padding-left:15px" href="@Url.Action("Index","CuaHang")">Quay lại </a><span class="icon-name"><i class="material-icons">keyboard_return</i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/content-->
                    </div>
                </div>
            }
        </div>
    </div>
</section>