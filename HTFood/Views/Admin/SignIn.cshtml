    .col-lg-8.col-md-12.col-sm-12 {
        background-image: url('../../images/food.jpg');
        font-family: "Times New Roman", Times, serif;
    }

    .l-detail {
        margin-left: 80px;
    }

    h5 {
        color: white;

    }

    h1 {
        color: whitesmoke;
    }

    h3 {
        color: white;
