@model HTFood.Models.NhanVienGiaoHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<title>Sửa thông tin nhân viên giao hàng</title>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Chỉnh sửa nhân viên giao hàng</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","NhanVienGiaoHang")">Nhân viên giao hàng</a></li>

                    </ul>

                </div>
            </div>
            <!--/Header-->
            <!--content-->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="row clearfix">
                    <div class="col-lg-12">
                        <div class="card">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaNV)
                            <div class="header">
                                <ul class="header-dropdown m-r--5">
                                    <li class="dropdown">
                                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                        <ul class="dropdown-menu pull-right">
                                            <li><a href="javascript:void(0);">Action</a></li>
                                            <li><a href="javascript:void(0);">Another action</a></li>
                                            <li><a href="javascript:void(0);">Something else</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                            <div class="body">
                                <h2 class="card-inside-title">Nhập thông tin cần thay đổi</h2>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.HoTenNV, new { htmlAttributes = new { @class = "form-control", placeholder = "Họ và tên" } })
                                                @Html.ValidationMessageFor(model => model.HoTenNV, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Họ và tên</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.TaiKhoanNV, new { htmlAttributes = new { @class = "form-control", placeholder = "Tài khoản" } })
                                                @Html.ValidationMessageFor(model => model.TaiKhoanNV, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Tài khoản</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @*@DateTime.Parse(Html.DisplayFor(model => model.NgaySinhKH,new { htmlAttributes = new { @class = "form-control", placeholder = "Ngày sinh" } }).ToString()).ToShortDateString()*@
                                                @Html.EditorFor(model => model.NgaySinhNV, new { htmlAttributes = new { @class = "form-control", @Value = Model.NgaySinhNV.ToString("dd/MM/yyyy"), placeholder = "Ngày sinh" } })
                                                @Html.ValidationMessageFor(model => model.NgaySinhNV, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Ngày sinh (mm/dd/yyyy)</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.MatKhauNV, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.MatKhauNV, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Mật khẩu</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.EmailNV, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.EmailNV, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Email</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.DiaChiNV, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DiaChiNV, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Địa chỉ</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.DienThoaiNV, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DienThoaiNV, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Điện thoại</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Giới tính</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.TrangThaiNV, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.TrangThaiNV, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Trạng thái NV</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.ViTriHienTai, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ViTriHienTai, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Vị trí hiện tại</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.DiemThuong, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DiemThuong, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Điểm thưởng</div>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.EditorFor(model => model.DoUuTien, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DoUuTien, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="help-info">Độ ưu tiên</div>
                                        </div>
                                    </div>       
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input class="btn btn-raised btn-primary waves-effect" type="submit" value="Save" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--/content-->
        </div>
    </div>
</section>

