@model HTFood.Models.NhanVienGiaoHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/assets/css/create.css" rel="stylesheet" />
<link href="~/assets/css/edit.css" rel="stylesheet" />
<title>Sửa thông tin nhân viên giao hàng</title>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Chỉnh sửa nhân viên giao hàng</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","NhanVienGiaoHang")">Nhân viên giao hàng</a></li>

                    </ul>

                </div>
            </div>
            <!--/Header-->
            <!--content-->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row clearfix">
                    <div class="col-md-6  ">
                        <div class="card">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.MaNV)
                            <div class="userbox">
                                <div class="header">
                                    <h2>Chỉnh sửa </h2>
                                    <ul class="header-dropdown m-r--5">
                                        <li class="dropdown">
                                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                            <ul class="dropdown-menu pull-right">
                                                <li><a href="javascript:void(0);">Action</a></li>
                                                <li><a href="javascript:void(0);">Another action</a></li>
                                                <li><a href="javascript:void(0);">Something else</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                                <div class="body">
                                    <h2 class="card-inside-title">Nhập thông tin nhân viên cần chỉnh sửa</h2>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Họ tên</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.HoTenNV, new { htmlAttributes = new { @class = "form-control", } })
                                            @Html.ValidationMessageFor(model => model.HoTenNV, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Ngày sinh(mm/dd/yyyy)</label><br>
                                        <input type="text" value="@Model.NgaySinhNV" name="NgaySinhNV" placeholder="Ngày đặt" class="datetime" />
                                        @Html.ValidationMessageFor(model => model.NgaySinhNV, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Tài khoản</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.TaiKhoanNV, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TaiKhoanNV, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Mật khẩu </label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.MatKhauNV, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.MatKhauNV, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Email</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.EmailNV, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.EmailNV, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Địa chỉ</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.DiaChiNV, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.DiaChiNV, "", new { @class = "text-danger" })
                                        </div>
                                    </div><div class="clearfix large_form">
                                        <label class="label icon-field">Điện thoại</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.DienThoaiNV, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.DienThoaiNV, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Giới tính</label> @Html.DisplayFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })<br>
                                        <div class="form-group" id="input-text">
                                            <div class="demo-radio-button">
                                                <input name="GioiTinh" type="radio" id="male" value="Nam" checked="">
                                                <label for="male"><span class="badge bg-light-blue">Nam</span></label>
                                                <input name="GioiTinh" type="radio" id="female" value="Nữ">
                                                <label for="female"><span class="badge bg-pink">Nữ</span></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field">Trạng thái</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.TrangThaiNV, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.TrangThaiNV, "", new { @class = "text-danger" })
                                        </div>
                                    </div><div class="clearfix large_form">
                                        <label class="label icon-field">Vị trí</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.ViTriHienTai, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.ViTriHienTai, "", new { @class = "text-danger" })
                                        </div>
                                    </div><div class="clearfix large_form">
                                        <label class="label icon-field">Điểm thưởng</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.DiemThuong, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.DiemThuong, "", new { @class = "text-danger" })
                                        </div>
                                    </div><div class="clearfix large_form">
                                        <label class="label icon-field">Độ ưu tiên</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.DoUuTien, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.DoUuTien, "", new { @class = "text-danger" })
                                        </div>
                                    </div><div class="clearfix large_form">
                                        <label class="label icon-field">Đánh giá</label><br>
                                        <div id="input-text">
                                            @Html.EditorFor(model => model.DanhGiaNVGH, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            @Html.ValidationMessageFor(model => model.DanhGiaNVGH, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="clearfix large_form">
                                        <div class="col-sm-12 ">
                                            <div class="demo-google-material-icon">
                                                <input class="btn btn-raised bg-light-blue waves-effect" type="submit" value="Lưu" />
                                                <a style="padding-left:15px" href="@Url.Action("Index","NhanVienGiaoHang")">Quay lại </a><span class="icon-name"><i class="material-icons">keyboard_return</i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/content-->
                    </div>
                </div>
            }
            <!--/content-->
        </div>
    </div>
</section>

