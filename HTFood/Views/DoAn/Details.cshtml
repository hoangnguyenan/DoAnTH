@model HTFood.Models.DoAn

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/assets/css/details.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<title>Chi tiết món ăn</title>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Khách hàng</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DoAn")">Đồ ăn</a></li>
                        <li class="breadcrumb-item active">@Html.DisplayFor(model => model.TenDA)</li>
                    </ul>
                </div>
            </div>
            <!--/Header-->
            <!--content-->
            <div class="row clearfix">
                <div class="col-12">
                    <div class="card">
                        <div class="header">
                            <div class="body">
                                <div class="wrapper row">
                                    <div class="preview col-md-6">

                                        <div class="preview-pic tab-content">
                                            <div class="tab-pane active" id="pic-1"><img src="@Html.DisplayFor(model => model.AnhDA)" /></div>
                                            <div class="tab-pane" id="pic-2"></div>
                                            <div class="tab-pane" id="pic-3"></div>
                                            <div class="tab-pane" id="pic-4"></div>
                                            <div class="tab-pane" id="pic-5"></div>
                                        </div>

                                    </div>
                                    <div class="details col-md-6">
                                        <h3 class="product-title"> @Html.DisplayFor(model => model.TenDA)</h3>
                                        <div class="rating">
                                            <div class="stars">
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star checked"></span>
                                                <span class="fa fa-star"></span>
                                                <span class="fa fa-star"></span>
                                            </div>
                                            <span class="review-no">@Html.DisplayFor(model => model.DanhGiaDoAn) reviews </span>
                                        </div>
                                        <p class="product-description">@Html.DisplayFor(model => model.MoTa).</p>
                                        <h4>Giá hiện tại: <span style="color:#ff9f1a">@Html.DisplayFor(model => model.DonGia)</span></h4>
                                        <p class="vote"><strong>91%</strong> người mua rất thích sản phẩm này! <strong>(87 votes)</strong></p>
                                        <h4>Ngày cập nhật: <span style="color:#85ad00">@DateTime.Parse(Html.DisplayFor(model => model.NgayCapNhat).ToString()).ToShortDateString()</span></h4>
                                        <h4>Trạng thái hàng: <span style="color:#0076ad">@Html.DisplayFor(model => model.TrangThaiDA)</span></h4>
                                        <h4>Số lượng còn lại: <span style="color:red">@Html.DisplayFor(model => model.SoLuongTon)</span></h4>    
                                        <div>
                                            <a class="btn btn-raised g-bg-blush2 pull-right" href="@Url.Action("Edit","DoAn",new { id = Model.MaDA })" )>Chỉnh sửa</a><br>
                                            <button class="btn btn-raised btn-success btn-sm" data-confirm="@Model.MaDA" id="btnDelete" value="Delete">Xóa</button>

                                        </div></div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <!--/content-->
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#btnDelete').click(function () {
                var choise = confirm("Xóa ?");
                if (choise) {
                    var idDelete = $(this).attr('data-confirm');
                    window.location.href = '/DoAn/Delete/' + idDelete;
                }
            });
        });
    </script>
</section>
