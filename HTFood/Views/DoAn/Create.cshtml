@model HTFood.Models.DoAn

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/assets/css/create.css" rel="stylesheet" />
<title>Thêm mới đồ ăn</title>
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <!--Header-->
            <div class="row">
                <div class="col-lg-12 col-md-6 col-sm-7">
                    <h2>Thêm mới đồ ăn</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Admin")">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DoAn")">Đồ ăn</a></li>
                        <li class="breadcrumb-item active">Thêm mới đồ ăn</li>
                    </ul>

                </div>
            </div>
            <!--/Header-->
            <!--content-->
            @using (Html.BeginForm(new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="row clearfix">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="userbox">
                                <div class="header">
                                    <h2>Thêm mới </h2>
                                    <ul class="header-dropdown m-r--5">
                                        <li class="dropdown">
                                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more-vert"></i> </a>
                                            <ul class="dropdown-menu pull-right">
                                                <li><a href="javascript:void(0);">Action</a></li>
                                                <li><a href="javascript:void(0);">Another action</a></li>
                                                <li><a href="javascript:void(0);">Something else</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                                <div class="body">
                                    <h2 class="card-inside-title">Nhập thông tin đồ ăn mới</h2>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="clearfix large_form">
                                        <label class="label icon-field"></label><br>
                                        <input type="text" value="" name="TenDA" placeholder="Tên đồ ăn" class="text" />
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field" style="color: black;font-weight: bold">Ngày cập nhật</label><br>
                                        <input type="date" value="" name="NgayCapNhat" class="datetime" />
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field"></label><br>
                                        <input type="text" value="" placeholder="Đơn giá" name="DonGia" class="text" />
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field"></label><br>
                                        <input type="text" value="" placeholder="Ảnh đồ ăn" name="AnhDA" class="text" />
                                    </div>
                                    @*<div class="col-sm-4">
                                            <b class="card-inside-title">Avatar</b>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="inputGroupFileAddon01">Tải lên</span>
                                                </div>
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="inputGroupFile01"
                                                           aria-describedby="inputGroupFileAddon01">
                                                    <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                                </div>
                                            </div>
                                        </div>*@
                                    <div class="clearfix large_form">
                                        <label class="label icon-field"></label><br>
                                        <input type="text" value="" name="MoTa" placeholder="Mô tả" class="text" />
                                        @*@Html.DropDownList("MaKH")*@
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field"></label><br>
                                        <input type="text" value="" name="SoLuongTon" placeholder="Số lượng tồn" class="text" size="30" />
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field"></label><br>
                                        <input type="text" value="" name="TrangThaiDA" placeholder="Trạng thái" class="text" size="30" />
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field"></label><br>
                                        <input type="text" value="" name="DanhGiaDoAn" placeholder="Đánh giá" class="text" size="30" />
                                    </div>
                                    <div class="clearfix large_form">
                                        <label class="label icon-field"></label><br>
                                        <input type="text" value="" name="MaDM" placeholder="Mã danh mục" class="text" size="30" />
                                    </div>
                                    <div class="clearfix large_form">
                                        <div class="col-sm-12 ">
                                            <div class="demo-google-material-icon">
                                                <input class="btn btn-raised bg-light-blue waves-effect" type="submit" value="Thêm mới" />
                                                <a style="padding-left:15px" href="@Url.Action("Index","DonDatHang")">Quay lại </a><span class="icon-name"><i class="material-icons">keyboard_return</i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/content-->
                    </div>
                </div>
            }
            <!--/content-->
        </div>
    </div>
</section>